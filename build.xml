<?xml version="1.0" ?>
<project name="jke" default="war">
<property name="JKE_VERSION" value="${BUILD_VERSION}.${BUILD_NUMBER}"/>
<path id="compile.classpath">

<fileset dir="WebContent/WEB-INF/lib">
<include name="*.jar"/>
</fileset>

</path>

<target name="init" depends="clean">

<mkdir dir="build/classes"/>

<mkdir dir="dist/${BUILD_VERSION}.${BUILD_NUMBER}" />
</target>

<target name="compile" depends="init" >
<javac destdir="build/classes" debug="true" srcdir="src" includeantruntime="false">
<classpath refid="compile.classpath"/>
</javac>
</target>

<target name="war" depends="compile">

<war destfile="dist/${BUILD_VERSION}.${BUILD_NUMBER}/jke.war" webxml="WebContent/WEB-INF/web.xml">
<fileset dir="WebContent"/>
<lib dir="WebContent/WEB-INF/lib"/>
<classes dir="build/classes"/>
</war>
</target>

 
<target name="clean">
<delete dir="dist" />
<delete dir="build" />
</target>


</project>
